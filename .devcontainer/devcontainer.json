{
  "name": "Frontier AI Solutions Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/azure/azure-dev/azd:latest": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-github-actions",
        "ms-azuretools.azure-dev",
        "ms-azuretools.vscode-bicep",
        "ms-python.black-formatter",
        "ms-python.pylint",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.analysis.extraPaths": [
          "${containerWorkspaceFolder}/backend"
        ],
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/backend/.venv/bin/python",
        "python.pythonPath": "${containerWorkspaceFolder}/backend/.venv/bin/python",
        "python.venvPath": "${containerWorkspaceFolder}/backend/.venv",
        "python.envFile": "${containerWorkspaceFolder}/backend/.env",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "-c",
              "source ${containerWorkspaceFolder}/backend/.venv/bin/activate 2>/dev/null || true; exec bash"
            ]
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        }
      }
    }
  },
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/backend"
  },
  "postCreateCommand": "chmod +x ./.devcontainer/setup.sh && ./.devcontainer/setup.sh",
  "forwardPorts": [8000, 5173],
  "portsAttributes": {
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Frontend Dev Server",
      "onAutoForward": "notify"
    }
  }
}
