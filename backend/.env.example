# Server Configuration
PORT=8000
ENVIRONMENT=development

# Azure AI Foundry Configuration
# Get these values from your Azure AI Foundry resource in the Azure Portal
AZURE_AI_RESOURCE_NAME=your-ai-foundry-resource-name
AZURE_AI_REGION=eastus2
AZURE_AI_PROJECT_NAME=your-project-name
PROJECT_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/api/projects/your-project-name

# Azure OpenAI Configuration
# Required for AI-powered recommendations and voice interactions
AZURE_OPENAI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
MODEL_DEPLOYMENT_NAME=gpt-4o

# Azure Speech Services Configuration
# Required for real-time voice interactions with avatar
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus2

# Azure Subscription Configuration (optional, used for infrastructure deployment)
SUBSCRIPTION_ID=your-subscription-id
RESOURCE_GROUP_NAME=your-resource-group-name

# Avatar Configuration (optional, defaults provided)
AZURE_AVATAR_CHARACTER=lori
AZURE_AVATAR_STYLE=graceful

# Voice Configuration (optional, defaults provided)
VOICE_NAME=en-US-Ava:DragonHDLatestNeural
VOICE_TYPE=azure-standard

# AI Behavior Configuration (optional, defaults provided)
AI_INSTRUCTIONS="You are Aria, a helpful AI assistant for Frontier AI Solutions. Help users understand Microsoft's AI offerings, Azure AI Foundry, partner ISV solutions, products, pricing, and roadmaps. Be concise, informative, and friendly. When users ask about solutions, recommend specific Azure services or ISV partner solutions from the Azure Marketplace that match their needs."
AI_TEMPERATURE=0.8
MAX_RESPONSE_TOKENS=4096
RECOMMENDATIONS_MAX_TOKENS=800

# Redis Configuration (optional, falls back to local JSON files if not provided)
# Set BACKUP_ONLY=true to skip Redis and use only local backup files
BACKUP_ONLY=false
REDIS_HOST=your-redis-host.redis.azure.net
REDIS_PORT=10000
REDIS_PASSWORD=your-redis-password

# Azure AI Agents (optional, experimental feature)
USE_AZURE_AI_AGENTS=false
